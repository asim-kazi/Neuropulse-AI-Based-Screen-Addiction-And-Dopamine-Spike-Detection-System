<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neuropulse"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="#1976D2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digital Wellness Monitoring"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Checking permissions..."
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:textColor="#333333" />

    <Button
        android:id="@+id/startMonitoringBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Monitoring"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:background="#1976D2"
        android:textColor="#FFFFFF"
        android:padding="16dp" />

    <Button
        android:id="@+id/debugBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Real-time Debug"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="16dp" />

    <Button
        android:id="@+id/permissionsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grant All Permissions"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:background="#FF9800"
        android:textColor="#FFFFFF"
        android:padding="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app analyzes your usage patterns to help improve digital wellness. All data stays on your device."
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#999999"
        android:layout_marginTop="24dp" />

</LinearLayout>